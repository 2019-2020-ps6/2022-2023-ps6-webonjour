{
  "name": "backend-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/backend/api",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/backend/api/src/main.ts",
        "tsConfig": "apps/backend/api/tsconfig.app.json",
        "assets": [
          {
            "glob": "assets/**",
            "input": "apps/backend/api",
            "output": "."
          },
          {
            "glob": "config/**",
            "input": "apps/backend/api",
            "output": "."
          },
          {
            "glob": "prisma/**",
            "input": ".",
            "output": "."
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "define": {
            "process.env.NODE_ENV": "\"production\""
          }
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "backend-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backend-api:build:development"
        },
        "production": {
          "buildTarget": "backend-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend/api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "push": true,
        "metadata": {
          "images": [
            "ghcr.io/2019-2020-ps6/2022-2023-ps6-webonjour/backend-api"
          ],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha"
          ]
        }
      }
    }
  },
  "tags": []
}
